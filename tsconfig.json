{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,           
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "sourceMap": true,
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ]
}